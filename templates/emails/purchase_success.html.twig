<h1>Bravo pour votre commande : {{ purchase.id }}</h1>
<p>
    Merci à vous {{ user.fullname }}
</p>
<table>
    <thead>
        <th>Produit</th>
        <th>Quantité</th>
        <th>P.U</th>
        <th>Total</th>
    </thead>
    <tbody>
        {% for it in purchase.purchaseItems %}
            <tr>
                <td>{{ it.productName }}</td>
                <td>{{ it.quantity }}</td>
                <td>{{ it.productPrice/100 }}</td>
                <td>{{ it.total/100 }} €</td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total :</td>
            <td>{{ purchase.total/100 }} €</td>
        </tr>
    </tfoot>
</table>