{% extends 'base.html.twig' %}

{% block title %}Categorie : {{ category.name }}!{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path("home") }}">Accueil</a></li>
        <li class="breadcrumb-item active">{{ category.name }}</li>
    </ol>
    <h1>Categories : {{ category.name }}</h1>
    <div class="row">
        {% for p in category.products %}
            <div class="col">
                <div class="card">
                    <img src="{{ p.mainPicture }}" alt="Image du produit" class="img-fluid">
                    <div class="card-body">
                        <h4 class="card-title">{{ p.name }} ({{ p.price / 100 }}&euro;) </h4>
                        <span class="badge bg-info">
                                {{ p.category.name }}
                            </span>

                        <p class="card-text">
                            {{ p.shortDescription }}
                        </p>
                        <a href="{{ path("product_details",{'category_slug':p.category.slug,'slug':p.slug}) }}" class="btn btn-primary btn-sm">DÃ©tails</a>
                        <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
